# Environment Configuration for Nutritional AI Chatbot
# Copy this file to .env and update the values according to your setup

# Application Environment
ENVIRONMENT=development  # development, production, or test

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutritional_chatbot
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Neo4j Graph Database (Optional - enables advanced graph features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Redis Cache (Optional - improves performance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI API (Optional - enables advanced AI responses)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Vector Embeddings Configuration
VECTOR_MODEL=all-MiniLM-L6-v2
VECTOR_CACHE_DIR=./models/embeddings

# Hugging Face Models Configuration
HF_MODEL=microsoft/DialoGPT-medium
HF_CACHE_DIR=./models/huggingface

# Performance Configuration
MAX_WORKERS=4

# Security Configuration
ENABLE_CONTENT_FILTER=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# Additional Settings
# Set to your domain in production
ALLOWED_ORIGINS=*

# Rate limiting (requests per hour)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600